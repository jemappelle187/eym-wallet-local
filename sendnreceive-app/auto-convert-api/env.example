# Server Configuration
PORT=4000
NODE_ENV=development

# Circle API Configuration
CIRCLE_API_KEY=sk_sandbox_your_circle_api_key_here
CIRCLE_BASE_URL=https://api.circle.com/v1
CIRCLE_SANDBOX=true

# FX Partner Configuration (for GHS -> USD conversion)
FX_PARTNER_BASE_URL=https://sandbox.fxpartner.local
FX_API_KEY=fx_sandbox_your_fx_api_key_here

# Ledger Configuration
LEDGER_BASE_CURRENCY=USD

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY_SECRET=your_api_key_secret_here

# Database (for future implementation)
DATABASE_URL=postgresql://username:password@localhost:5432/eym_wallet

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MTN MoMo Collections (optional until enabled)
# Obtain your Subscription Key (Primary or Secondary) from the MoMo Developer portal
# Create API User (UUID) and API Key via the API using the subscription key
# Then set the following values to enable Collections integration
MTN_MOMO_COLLECTIONS_SUBSCRIPTION_KEY=
MTN_MOMO_COLLECTIONS_API_USER=
MTN_MOMO_COLLECTIONS_API_KEY=
# sandbox | production
MTN_MOMO_ENV=sandbox
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_CALLBACK_HOST=https://example.com
MTN_MOMO_CURRENCY=GHS









